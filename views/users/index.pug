extends ../layouts/layout.pug
block content
  .d-flex.justify-content-between.align-items-center.mb-5
    h3 Users List
  table.table
    thead.thead-dark
      tr
        th Avatar
        th Full Name
        th Email
        th 
    tbody
      each user in users
        tr
          td.align-middle
            img.rounded-circle(src= user.avatar, width="40", height="40")
          td.align-middle= user.name
          td.align-middle= user.email
          td.align-middle
            .d-flex.justify-content-around.align-items-center
              a.btn.btn-light(href=`/users/view/${user.id}`) View
              a.btn.btn-success(href=`/users/${user.id}/update`) Update
              a.btn.btn-danger(href=`/users/${user.id}/delete`) Delete
        