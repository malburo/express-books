extends ../layouts/layout.pug
block content
  .d-flex.justify-content-between.align-items-center.mb-5
    h3 Users List
    a.btn.btn-primary(href="/users/create") Create new user
  table.table
    thead.thead-dark
      tr.d-flex
        th.col-4 Full Name
        th.col-4 Email
        th.col-4 
    tbody
      each user in users
        tr.d-flex
          td.col-4= user.name
          td.col-4= user.email
          td.col-4
            .d-flex.justify-content-around.align-items-center
              a.btn.btn-light(href="/users/view/" + user.id) View
              a.btn.btn-success(href="/users/view/" + user.id) Update
              a.btn.btn-danger(href="/users/" + user.id + "/delete") Delete
        